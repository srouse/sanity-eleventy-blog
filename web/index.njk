---
layout: layouts/home.njk
tags:
  - nav
navtitle: Home
---

<h1>{{ homePage.title }}</h1>
{{ homePage.slug }}
{{ homePage.publishedAt }}

<scw-stack scw-gap-2s>
  {%- for row in homePage.content -%}
    <scw-flex-h 
      scw-gap-2s>
      {%- for cell in row.rowLayout -%}
        <scw-card scw-fill
          src="{{ urlFor( cell.mainImage ).width(400).url() }}"
          alt="img alt text"
          heading="{{ cell.title }}"
          preload
          description="{{ cell.excerpt }}">
        </scw-card>
      {%- endfor -%}
    </scw-flex-h>
  {%- endfor -%}
</scw-stack>


